%h3= proposal.speakers.one? ? 'Speaker' : 'Speakers'
- proposal.speakers.each do |speaker|
  %div{ data: { 'field-id' => 'proposal_speaker_name' } }
    %strong= link_to speaker.name, [:organizer, @event, speaker]
  GitHub:&nbsp;
  = speaker.link_to_github
  \&nbsp;/&nbsp;
  Twitter:&nbsp;
  = speaker.link_to_twitter
  %p= speaker.bio

%h3 Abstract
%div{ data: { 'field-id' => 'proposal_abstract' } }
  = proposal.abstract

%h3 Details
%div{ data: { 'field-id' => 'proposal_details' } }
  = proposal.details

%h3 Pitch
%div{ data: { 'field-id' => 'proposal_pitch' } }
  =proposal.pitch

  - if proposal.custom_fields.any?
    - proposal.proposal_data[:custom_fields].select do |key,value|
      %h3= key.capitalize
      %div
      = value.capitalize
      %div

